{
  "name": "Data Science Classroom",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "reditorsupport.r",
        "ikuyadeu.r-debugger",
        "ms-mssql.mssql",
        "ms-mssql.sql-database-projects-vscode",
        "ms-mssql.data-workspace-vscode",
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-azureresourcegroups",
        "ms-azuretools.vscode-azurestorage",
        "ms-azuretools.vscode-cosmosdb",
        "ms-vscode.azure-account",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "mtxr.sqltools-driver-sqlite",
        "mtxr.sqltools-driver-mssql",
        "mtxr.sqltools-driver-mysql",
        "koszti.dotnet-test-explorer",
        "mechatroner.rainbow-csv",
        "janisdd.vscode-edit-csv",
        "ms-vscode.hexeditor",
        "esbenp.prettier-vscode",
        "oderwat.indent-rainbow",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "redhat.vscode-xml",
        "yzhang.markdown-all-in-one",
        "quarto.quarto",
        "ms-vscode-remote.remote-containers",
        "github.copilot",
        "github.copilot-chat",
        "eamodio.gitlens",
        "ms-vscode.live-server",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag",
        "visualstudioexptteam.vscodeintellicode",
        "ms-python.isort",
        "donjayamanne.githistory",
        "ms-vscode.powershell"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
        "python.terminal.activateEnvironment": true,
        "r.rpath": "/usr/local/bin/R",
        "r.rterm.linux": "/usr/local/bin/R",
        "jupyter.jupyterServerType": "local",
        "jupyter.kernels.filter": [],
        "files.associations": {
          "*.rmd": "rmd",
          "*.Rmd": "rmd"
        },
        "editor.rulers": [80, 120],
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "sqltools.connections": [
          {
            "name": "Student PostgreSQL",
            "driver": "PostgreSQL",
            "server": "localhost",
            "port": 5432,
            "database": "${env:PGDATABASE}",
            "username": "${env:PGUSER}",
            "password": "${env:PGPASSWORD}",
            "connectionTimeout": 0
          }
        ]
      }
    }
  },

  "forwardPorts": [8888, 8787, 5432, 3000, 8000, 8080],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "8787": {
      "label": "RStudio Server",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "3000": {
      "label": "Development Server",
      "onAutoForward": "openPreview"
    },
    "8000": {
      "label": "Python Web Server",
      "onAutoForward": "openPreview"
    },
    "8080": {
      "label": "Alternative Web Server",
      "onAutoForward": "openPreview"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",

  "remoteUser": "codespace",
  "containerUser": "codespace",

  "mounts": [
    "source=codespace-workspace,target=/workspaces,type=volume"
  ],

  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ]
}
